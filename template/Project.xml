<?xml version="1.0" encoding="utf-8"?>
<project>

	<!----- Defines that are used in code :
	- EXTERNAL_LOAD : Load the files from "assets/" dynamically without recompiling
	-->
	<haxedef name="EXTERNAL_LOAD" if="debug"/>
	<!------------------------------APPLICATION SETTINGS---------------------------->
	<app title="djFlixel" file="djFlixel" main="Main" version="0.3.0" company="none" />
	<!--The flixel preloader is not accurate in Chrome. You can use it regularly if you embed the swf into a html file
	<!--or you can set the actual size of your file manually at "FlxPreloaderBase-onUpdate-bytesTotal"!-->
	<!-- Use a preloader only if building for online SWF-->
	<app preloader="flixel.system.FlxBasePreloader"/>
	<!--Minimum without FLX_NO_GAMEPAD: 11.8, without FLX_NO_NATIVE_CURSOR: 11.2 -->
	<set name="SWF_VERSION" value="11.8" />
	<!--------------------------------WINDOW SETTINGS------------------------------->
	<!--These window settings apply to all targets-->
	<window width="640" height="480" fps="30" background="#000000" hardware="true" vsync="true" />
	<!--------------------------------PATHS SETTINGS-------------------------------->
	<classpath name="source" />
	<assets path="assets" rename="assets" exclude="*.ase|thumbs.db|*.wav|#_*|*.ogg"/>
	<set name="BUILD_DIR" value="build/debug/" />
	<!--------------------------------LIBRARIES------------------------------------->
	<haxelib name="flixel"/>
	<haxelib name="djFlixel" />
	<!--------------------------------HAXEDEFINES----------------------------------->
	<!--Disable the right and middle mouse buttons-->
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	<haxedef name="FLX_NO_MOUSE_ADVANCED" unless="debug"/>
	<haxedef name="FLX_NO_TOUCH" />
	<haxeflag name="--no-traces" unless="debug"/>
	<!-- -->
	<!-- Newgrounds API:
	<!-- Uncomment these lines to enable newgrounds api integration
	<!-- 
	<haxedef name="NEWGROUNDS"/>
	<haxeflag name="-swf-lib" value="assets/newgrounds/NewgroundsAPI.swc"/>
	<haxedef name="as3_native" if="flash"/>
	<!-- -->
	<!--------------------------------CUSTOM---------------------------------------->
</project>
